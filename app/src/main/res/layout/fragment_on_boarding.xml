<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/space_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_weightly"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/black"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_description"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/black">

    </TextView>

    <com.gultendogan.weightlyapp.uicomponents.CardRulerViewComponent
        android:id="@+id/cardRulerCurrent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginBottom="@dimen/space_4"
        app:cardElevation="0dp">

    </com.gultendogan.weightlyapp.uicomponents.CardRulerViewComponent>

    <com.gultendogan.weightlyapp.uicomponents.CardRulerViewComponent
        android:id="@+id/cardRulerGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/space_4"
        app:cardElevation="0dp">
    </com.gultendogan.weightlyapp.uicomponents.CardRulerViewComponent>

    <com.gultendogan.weightlyapp.uicomponents.CardRulerViewComponent
        android:id="@+id/cardRulerHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/space_4"
        app:cardElevation="0dp">
    </com.gultendogan.weightlyapp.uicomponents.CardRulerViewComponent>

    <com.gultendogan.weightlyapp.uicomponents.CardRulerViewComponent
        android:id="@+id/cardRulerAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/space_4"
        app:cardElevation="0dp">
    </com.gultendogan.weightlyapp.uicomponents.CardRulerViewComponent>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checkedButton="@+id/button1"
        app:selectionRequired="true"
        app:singleSelection="true">

        <Button
            android:id="@+id/button1"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kg" />

        <Button
            android:id="@+id/button2"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbs" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/genderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:checkedButton="@+id/button1"
        app:selectionRequired="true"
        app:singleSelection="true">

        <Button
            android:id="@+id/buttonFemale"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/female" />

        <Button
            android:id="@+id/buttonMale"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/male" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/space_8"
        android:layout_marginTop="@dimen/space_8"
        android:text="@string/_continue"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnEmoji"
        app:layout_constraintStart_toStartOf="@+id/btnEmoji"
        app:layout_constraintTop_toBottomOf="@+id/btnEmoji" />

</LinearLayout>